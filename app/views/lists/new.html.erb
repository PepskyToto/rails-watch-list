<div class="container mt-4" style="background-color: #f0f8ff; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);">
  <div class="jumbotron text-center bg-primary text-white mb-4" style="border-radius: 10px;">
    <h1 class="display-4">New List</h1>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with(model: @list, url: lists_path, method: :post) do |form| %>
        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= form.submit "Create List", class: "btn btn-custom" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
